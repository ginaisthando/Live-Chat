<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>BrightFuture University Chat Application</display-name>
    <description>
        A real-time messaging platform for BrightFuture University students and faculty.
    </description>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>login</welcome-file>
        <welcome-file>pages/login.html</welcome-file>
    </welcome-file-list>

    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- 30 minutes -->
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- Set to true in production with HTTPS -->
        </cookie-config>
    </session-config>

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/pages/error.html</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/pages/error.html</location>
    </error-page>

    <!-- Security constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Resources</web-resource-name>
            <url-pattern>/home</url-pattern>
            <url-pattern>/conversations</url-pattern>
            <url-pattern>/chat</url-pattern>
        </web-resource-collection>
        <!-- Note: This is basic configuration. In production, implement proper authentication -->
    </security-constraint>

    <!-- MIME type mappings -->
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>html</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>

    <!-- Context parameters -->
    <context-param>
        <param-name>application-name</param-name>
        <param-value>BrightFuture University Chat</param-value>
    </context-param>
    
    <context-param>
        <param-name>version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>

</web-app>
